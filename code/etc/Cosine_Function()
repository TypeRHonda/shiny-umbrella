void Cosine_Function()  // Cos x 함수  { char buf[101], Explain[20][101], select; int width, height, j = 0; double i, value, x, y; FILE *tp; system("cls"); printf("\n\n\t\t\ty=cos x의 그래프 입니다.\n"); printf("\n\n\t\t\t그래프를 그립니다.\n"); Sleep(1000); // 1초의 대기시간 system("cls"); initgraph(); // graph 설정 setcolor(3); line(10, 350, 1200, 350);      // x축 선 그리기 (빨간색) outtextxy(1150, 280, "x축"); gotoxy(0, 0);                  // 좌표 (0,0) 초기화 setcolor(4); line(550, 10, 550, 900);       // y축 선 그리기 (하늘색) outtextxy(470, 10, "y축"); gotoxy(0, 0);       // 좌표 (0,0) 초기화 setcolor(15); outtextxy(600, 145, "-------------- 1"); gotoxy(0, 0); outtextxy(600, 372, "-------------- -1"); gotoxy(0, 0); width = getmaxx(); // x 길이 640 height = getmaxy(); // y 길이 300 for (i = -720; i <= 900.01; i = i + 0.01) // -720도 부터 900도 까지 반복문으로 돌림 0.01도씩 증가 {  value = cos(i * PI / 180);  // 현재 각도를 double형으로 구하는 공식 = 각도 * (PI / 180)  x = i / 720.0 * width;  // 현재 각도를 720도로 나눈다음 x길이 640을 곱함 ,   720대신 360 1080가능하나 720이 보기에 편함  y = value / 2 * height; // double형으로 나온 cos 값을 2로 나눈다음 y길이 300을 곱함  putpixel(x + 390, y + 350); // 해당 좌표에 점찍기 } system("pause"); clrscr(); system("cls"); printf("\n\n\t\t\tCos함수에 대한 설명을 보시겠습니까? (y / n) : "); fflush(stdin); scanf(" %c", &select); system("cls"); if (select == 'y') {  tp = fopen("res//cos.txt", "r");  // log.txt파일을 읽기모드로 열기  while ((fgets(buf, 100, tp)) != NULL)  // up파일이 NULL 이 아닐때까지 fgets로 불러옴  {   buf[strlen(buf) - 1] = '\0';  // 개행문자 제거를 위해 NULL 문자 삽입   strcpy(Explain[j], buf);   // Explain배열에 buf배열 복사   j++;  }  fclose(tp);  for (int k = 0; k < j; k++)  {   setfontcolor(11);   printf("\t\t%s\n", Explain[k]);   // Log 함수에 대한 설명문  } } else {  return; } setfontcolor(15); printf("\n\n"); system("pause");}
