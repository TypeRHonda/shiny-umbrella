void Tangent_Function()  // Tan x 함수  { char buf[101], Explain[20][101], select; int width, height, j = 0; double i, value, x, y; FILE *gp; system("cls"); printf("\n\n\t\t\ty=tan x의 그래프 입니다.\n"); printf("\n\n\t\t\t그래프를 그립니다.\n"); Sleep(1000); // 1초의 대기시간 system("cls"); initgraph(); setcolor(3); line(50, 300, 900, 300);     // x축 선 그리기 (빨간색) outtextxy(890, 250, "x축"); gotoxy(0, 0); setcolor(4); line(450, 10, 450, 900);     // y축 선 그리기 (하늘색) outtextxy(470, 10, "y축"); gotoxy(0, 0); setcolor(15); width = getmaxx(); // x 길이 640 height = getmaxy(); // y 길이 300 for (i = -720; i <= 900.01; i = i + 0.01)  // -720도 부터 900도 까지 반복문으로 돌림 0.01도씩 증가 {  value = -tan(i * PI / 180);  // 현재 각도를 double형으로 구하는 공식 = 각도 * (PI / 180)    마이너스를 안 붙여주면 모양이 반전 되어 나옴  x = i / 720.0 * width;   // 현재각도를 720도로 나눈다음 x값 640 곱해줌  y = value / 5.5 * height;  // double형 탄젠트값을 5.5로 나눈다음 y값 300을 곱해줌  5.5는 꺾이는 정도  putpixel(x + 130, y + 300); // 해당 좌표에 점찍기 } system("pause"); clrscr(); system("cls"); printf("\n\n\t\t\ttan함수에 대한 설명을 보시겠습니까? (y / n) : "); fflush(stdin); scanf(" %c", &select); system("cls"); if (select == 'y') {  gp = fopen("res//tan.txt", "r");  // log.txt파일을 읽기모드로 열기  while ((fgets(buf, 100, gp)) != NULL)  // up파일이 NULL 이 아닐때까지 fgets로 불러옴  {   buf[strlen(buf) - 1] = '\0';  // 개행문자 제거를 위해 NULL 문자 삽입   strcpy(Explain[j], buf);   // Explain배열에 buf배열 복사   j++;  }  fclose(gp);  for (int k = 0; k < j; k++)  {   setfontcolor(11);   printf("\t\t%s\n", Explain[k]);   // Log 함수에 대한 설명문  } } else {  return; } setfontcolor(15); printf("\n\n"); system("pause");}
