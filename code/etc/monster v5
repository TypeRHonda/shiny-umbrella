#include<stdio.h>#include<string.h>#include<stdlib.h>#include<time.h>typedef struct monster { //몬스터 구조체. char monster_name[8]; int level; int full_hp; int have_hp; int atk; int def; int give_exp;}Monster;void create_monster(monster* battle) { // 몬스터를 생성하는 함수. srand((unsigned)time(NULL)); int mon_sec = (rand()%2+1); if (mon_sec == 1) {  strcpy(battle->monster_name, "돼지"); } else {  strcpy(battle->monster_name, "뱀"); } battle->level = rand() % 5 + 1; // 몬스터의 레벨을 랜덤함수로 결정. battle->full_hp = 5 + battle->level * 3; // 몬스터의 총 체력을 결정. battle->have_hp = battle->full_hp; battle->atk = (int)battle->level*1.5;    // 현재 몬스터의 공격력을 결정. battle->def = (int)battle->level;        // 현재 몬스터의 방어력을 결정. battle->give_exp = battle->level * 10; return;}
