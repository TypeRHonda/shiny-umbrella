void Linear_Function()   // 2차 함수 { double a, b, c, i, j, k; double x1 = 0, x2 = 0, y1 = 0; char buf[151], Explain[20][151], select; int v = 0; FILE *zp; system("cls"); printf("\n\n\t\t\t주의 사항 : 3개의 값을 입력하실 때 a값을 양수를 입력하셨으면 b,c도 양수를 입력해주세요.\n"); printf("\t\t\ta값을 음수로 입력하셨으면 b,c도 음수를 입력해주세요."); printf("\n\n\t\t\ty=ax^2+bx+c라는 형식의 그래프 입니다.\n"); printf("\n\n\t\t\ta값 b값 c값을 입력해주세요.\n"); printf("\n\n\t\t\ta : "); scanf("%lf", &a); printf("\n\n\t\t\tb : "); scanf("%lf", &b); printf("\n\n\t\t\tc : "); scanf("%lf", &c); if (a > 0) {  if (b < 0)  {   system("cls");   printf("\n\n\t\t\t입력이 잘못 되었습니다. 주의사항을 꼭 읽어주시고 입력해주세요.\n");   system("pause");   return;  }  else if (c < 0)  {   system("cls");   printf("\n\n\t\t\t입력이 잘못 되었습니다. 주의사항을 꼭 읽어주시고 입력해주세요.\n");   system("pause");   return;  } } else if (a < 0) {  if (b > 0)  {   system("cls");   printf("\n\n\t\t\t입력이 잘못 되었습니다. 주의사항을 꼭 읽어주시고 입력해주세요.\n");   system("pause");   return;  }  else if (c > 0)  {   system("cls");   printf("\n\n\t\t\t입력이 잘못 되었습니다. 주의사항을 꼭 읽어주시고 입력해주세요.\n");   system("pause");   return;  } } printf("\n\n\t\t\t그래프를 그립니다.\n"); Sleep(700); system("cls"); initgraph(); setcolor(3); line(50, 300, 900, 300); outtextxy(900, 230, "x축"); gotoxy(0, 0); setcolor(4); line(450, 10, 450, 900); outtextxy(450, 10, "y축"); gotoxy(0, 0); setcolor(15); gotoxy(0, 0); i = sqrt(b / a); //ax^2 + bx + c를 완전 제곱식으로 바꾸기 위해      //a(x^2 + (b/a)x + (c/a)식을 y^2 = a(x + c)^2로 바꾼다. j = sqrt(c / a); // 그러기 위해서 b와 c값에 루트를 씌워준다. k = (i + j) * 10; for (x1 = -100; x1 <= 100; y1 = (a*0.05*x1*x1) - c, x1 = x1 + 0.01) {  putpixel((449 + x1 + k), 300 - (y1)); //그래프 출력. } system("pause"); clrscr(); system("cls"); printf("\n\n\t\t\t2차함수에 대한 설명을 보시겠습니까? (y / n) : "); fflush(stdin); scanf(" %c", &select); system("cls"); if (select == 'y') {  zp = fopen("res//linear.txt", "r");  // linear.txt파일을 읽기모드로 열기  while ((fgets(buf, 150, zp)) != NULL)  // zp파일이 NULL 이 아닐때까지 fgets로 불러옴  {   buf[strlen(buf) - 1] = '\0';  // 개행문자 제거를 위해 NULL 문자 삽입   strcpy(Explain[v], buf);   // Explain배열에 buf배열 복사   v++;  }  fclose(zp);  for (int k = 0; k < v; k++)  {   setfontcolor(11);   printf("\t\t%s\n", Explain[k]);   // 2차 함수에 대한 설명문  } } else {  return; } setfontcolor(15); printf("\n\n"); system("pause");}
