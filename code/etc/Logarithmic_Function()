void Logarithmic_Function() // Log x 함수  { char buf[101], Explain[20][101], select; int Width, Height, j = 0; double i, Value, x, y; FILE *up; system("cls"); printf("\n\n\t\t\ty=log10 x의 그래프 입니다.\n"); printf("\n\n\t\t\t그래프를 그립니다.\n"); Sleep(1000); // 1초의 대기시간 system("cls"); initgraph(); // graph 설정 setcolor(3); line(10, 350, 1200, 350);      // x축 선 그리기 (빨간색) outtextxy(1150, 280, "x축"); gotoxy(0, 0);                  // 좌표 (0,0) 초기화 setcolor(4); line(550, 10, 550, 900);       // y축 선 그리기 (하늘색) outtextxy(470, 10, "y축"); gotoxy(0, 0);               // 좌표 (0,0) 초기화 setcolor(15); Width = getmaxx(); Height = getmaxy(); for (i = 0; i <= 10.01; i = i + 0.0001) //  -720도 ~ 900도 까지 반복 // 한 번 돌때마다 0.01도 상승 {  Value = log10(i); // 현재 각도를 double형으로 구하는 공식 = 각도 * ( PI/ 180)  x = (-Value) * Width;  // x좌표는 현재각도 / 720도 * 콘솔창 x길이     ,   720대신 360 1080가능하나 720이 보기에 편함  y = i / 0.04 * Height; // y좌표는 현재 각도 / 기울기정도 * 콘솔창 y길이  putpixel(x - 100, y); // 해당 좌표에 점 찍기 } system("pause"); clrscr(); system("cls"); printf("\n\n\t\t\tLog함수에 대한 설명을 보시겠습니까? (y / n) : "); fflush(stdin); scanf(" %c", &select); system("cls"); if (select == 'y') {  up = fopen("res//log.txt", "r");  // log.txt파일을 읽기모드로 열기  while ((fgets(buf, 100, up)) != NULL)  // up파일이 NULL 이 아닐때까지 fgets로 불러옴  {   buf[strlen(buf) - 1] = '\0';  // 개행문자 제거를 위해 NULL 문자 삽입   strcpy(Explain[j], buf);   // Explain배열에 buf배열 복사   j++;  }  fclose(up);  for (int k = 0; k < j; k++)  {   setfontcolor(11);   printf("\t\t%s\n", Explain[k]);   // Log 함수에 대한 설명문  } } else {  return; } setfontcolor(15); printf("\n\n"); system("pause");}
