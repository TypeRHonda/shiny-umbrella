Minecraft.BetaClient = function(args) {    	if(Minecraft.ENVIRONMENT == 'node') {    		if(typeof Minecraft.node.net == 'undefined') Minecraft.node.net = require('net');    		    		this.host = args.host;    		this.port = args.port || 25565;    		this.username = args.username || 'Player';    		this.status = 0;    		    		if(typeof args.onLogin == 'function') this.onLogin = args.onLogin;    		    		this.socket = new Minecraft.node.net.Socket();    		this.socket.on('data', function(data) {    			console.log(data);    		}).connect(this.port, this.host, function() {    			this.socket.write('\2' + args.username);    			this.status = 1;    		});    		    	} else {    		throw new Error('Only compatible in node');    	}    };
