	@Override	public void onMessage(MessageEvent event) throws Exception {		Command command = Common.getCommand(this, event);		if (command != null) {			String sentence = sentences.get(random.nextInt(sentences.size()));			for (Entry<String, ArrayList<String>> entry : map.entrySet()) {				while (sentence.contains("[" + entry.getKey() + "]")) {					sentence = sentence.replaceFirst("\\[" + entry.getKey() + "\\]", entry.getValue().get(random.nextInt(entry.getValue().size())));				}			}			say(event.getChannel(), sentence);		}	}
	@Override	public String getCommand() {		return "drama";	}
	@Override	public boolean isChannelOnly() {		return false;	}
	@Override	public boolean isFun() {		return true;	}}
